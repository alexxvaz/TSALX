@model TSALX.ViewModel.RegiaoVM

@{
    ViewBag.Title = Model.Titulo;
}

<h2>@Model.Titulo</h2>

<div class="row">
    <div class="col-md-12 text-right">
        <a href="@Url.Action("Index", "Regiao" )" class="text-secondary">
            <i class="fa fa-table" aria-hidden="true"></i> Listar Regiões
        </a>
    </div>
</div>

@using ( Html.BeginForm() )
{
    @Html.AntiForgeryToken()

    <div class="row mt-2">
        <div class="col-md-12">
            <div class="form-group">
                @Html.LabelFor( m => m.regiao.Nome )
                @Html.TextBoxFor( m => m.regiao.Nome, new { @class = "form-control", autocomplete = "off" } )
                @Html.ValidationMessageFor( m => m.regiao.Nome )
            </div>
        </div>
    </div>

    <div class="row mt-1">
        <div class="col-md-5">
            <div class="form-group">
                @Html.LabelFor( m => m.regiao.CodCountry )
                @Html.DropDownListFor( m => m.regiao.CodCountry, new SelectList( Model.ListaCountry, "Sigla", "NomePais" ), "(selecione)", new { @class = "form-control", id = "listaCountry" } )
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                @Html.LabelFor( m => m.regiao.Sigla )
                @Html.TextBoxFor( m => m.regiao.Sigla, new { @class = "form-control", autocomplete = "off" } )
                @Html.ValidationMessageFor( m => m.regiao.Sigla )
            </div>
        </div>

        <div class="col-md-4" style="padding-top: 3.25%">
            <div class="custom-switch custom-control-inline">
                @Html.CheckBoxFor( m => m.regiao.TemSelecao, new { @class = "custom-control-input" } )
                @Html.LabelFor( m => m.regiao.TemSelecao, new { @class = "custom-control-label" } )
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12 text-right">
            <button type="submit" class="btn btn-warning">Salvar</button>
        </div>
    </div>
}

@section Regiao_Novo
{
    <script type="text/javascript">
        const nTipo = @Model.TipoMSG;
        const sMsg = "@Model.TextoMSG";
    </script>

    <script type="text/javascript" src="~/Content/script/js/regiao.js"></script>
}