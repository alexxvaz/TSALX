@model TSALX.Models.EquipePesquisa
@{
    Layout = null;
}
<div class="modal-dialog modal-lg" role="document">

    <div class="modal-content">

        <!-- Cabeçalho -->
        <div class="modal-header bg-primary">
            <h5>Pesquisa Equipe</h5>
            <button type="button" class="close text-white" data-dismiss="modal" aria-label="Fechar">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>

        <!-- Corpo -->
        <div class="modal-body">

            <!-- Pesquisa -->
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        @Html.LabelFor( m => m.NomeEquipe )
                        @Html.TextBoxFor( m => m.NomeEquipe, new { @class = "form-control", autocomplete = "on" } )
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-5">
                    <div class="form-group">
                        @Html.LabelFor( m => m.NomePais )
                        @Html.DropDownListFor( m => m.NomePais, new SelectList( Model.ListaRegiao, "IDRegiao", "Nome" ), "(selecione)", new { @class = "form-control", id= "listaRegiaoPesquisa" } )
                    </div>
                </div>
                <div class="col-md-5">
                    <div class="form-group">
                        @Html.LabelFor( m => m.IDLiga )
                        @Html.TextBoxFor( m => m.IDLiga, new { @class = "form-control", autocomplete = "on" } )
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        @Html.LabelFor( m => m.AnoTemporada )
                        @Html.TextBoxFor( m => m.AnoTemporada, new { @class = "form-control", autocomplete = "on" } )
                    </div>
                </div>
            </div>

            <!-- Resultado -->
            
        </div>
    </div>
</div>
