@model TSALX.Models.Lancamento

@{
    ViewBag.Title = "Depositar";
}

<h1>Depósito</h1>

@if( ViewBag.ErroMensagem != null )
{
    <div class="row mt-3">
        <div class="col-lg-12">
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Fechar">
                    <span aria-hidden="true">&times;</span>
                </button>
                @ViewBag.ErroMensagem
            </div>
        </div>
    </div>
}

@if( ViewBag.Mensagem != null )
{
    <div class="row mt-3">
        <div class="col-lg-12">
            <div class="alert alert-info alert-dismissible fade show" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Fechar">
                    <span aria-hidden="true">&times;</span>
                </button>
                @ViewBag.Mensagem
            </div>
        </div>
    </div>
}

<div class="row mt-4">
    <div class="col-lg-4 offset-4">
        @using( Html.BeginForm() )
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                @Html.LabelFor( m => m.DataLancamento )
                @Html.TextBoxFor( m => m.DataLancamento, new { @class = "form-control", @type = "date" } )
                @Html.ValidationMessageFor( m => m.DataLancamento )
            </div>
            <div class="form-group">
                @Html.LabelFor( m => m.ValorLancamento )
                @Html.TextBoxFor( m => m.ValorLancamento, new { @class = "form-control numero", autocomplete = "off" } )
                @Html.ValidationMessageFor( m => m.ValorLancamento )
            </div>
            <button type="submit" class="btn btn-warning btn-block"><i class="fa fa-usd" aria-hidden="true"></i> Depositar</button>
        }
    </div>

</div>
