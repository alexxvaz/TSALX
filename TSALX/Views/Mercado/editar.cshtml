@model TSALX.ViewModel.MercadoVM

@{
    ViewBag.Title = Model.Titulo;
}

<h1>@Model.Titulo</h1>

<div class="row">
    <div class="col-lg-12 text-right">
        <a href="@Url.Action("Index", "Mercado" )" class="text-secondary">
            <i class="fa fa-table" aria-hidden="true"></i> Listar Mercados
        </a>
    </div>
</div>

@using ( Html.BeginForm() )
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor( m => m.mercado.IDMercado )

    <div class="row mt-2">
        <div class="col-lg-12">
            <div class="form-group">
                @Html.LabelFor( m => m.mercado.Nome )
                @Html.TextBoxFor( m => m.mercado.Nome, new { @class = "form-control", autocomplete = "off" } )
                @Html.ValidationMessageFor( m => m.mercado.Nome )
            </div>
        </div>
    </div>

    <div class="row">

        <div class="col-lg-12 text-right">
            <button type="submit" class="btn btn-warning">Salvar</button>
        </div>
    </div>
}

@section Mercado
{
    <script type="text/javascript">
        $(document).ready(() => {
            exibirMensagem( @Model.TipoMSG, "@Model.TextoMSG");
        });
    </script>
}