@model TSALX.Models.Mercado

@{
    ViewBag.Title = "Editar Mercado";
}

<h1>Editar Mercado</h1>

<div class="row">
    <div class="col-lg-12 text-right">
        <a href="@Url.Action("Index", "Mercado" )" class="text-secondary">
            <i class="fa fa-table" aria-hidden="true"></i> Listar Mercados
        </a>
    </div>
</div>

@using( Html.BeginForm() )
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor( m => m.IDMercado )

    <div class="row mt-2">
        <div class="col-lg-12">
            <div class="form-group">
                @Html.LabelFor( m => m.Nome )
                @Html.TextBoxFor( m => m.Nome, new { @class = "form-control", autocomplete = "off" } )
                @Html.ValidationMessageFor( m => m.Nome )
            </div>
        </div>
    </div>

    <div class="row">

        <div class="col-lg-12 text-right">
            <button type="submit" class="btn btn-warning">Salvar</button>
        </div>
    </div>
}

@if( ViewBag.ErroMensagem != null )
{
    <div class="row mt-3">
        <div class="col-lg-12">
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Fechar">
                    <span aria-hidden="true">&times;</span>
                </button>
                @ViewBag.ErroMensagem
            </div>
        </div>
    </div>
}




