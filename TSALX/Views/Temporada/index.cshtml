@model TSALX.ViewModel.TemporadaVM

@{
    ViewBag.Title = Model.Titulo;
}

<h1>@Model.Titulo</h1>

<div class="row mt-5">
    <div class="col-md-12">
        <table class="table bg-white" id="TSALXTabela">
            <thead class="bg-primary text-white">
                <tr>
                    <th class="w-50 text-center">Ano Inicial</th>
                    <th class="w-50 text-center">Ano Final</th>
                    <th>&nbsp;</th>
                    <th>&nbsp;</th>
                </tr>
            </thead>
            <tbody>

                @foreach ( var item in Model.ListaTemporada )
                {

                    <tr>
                        <td class="w-50 text-center">@item.AnoInicial</td>
                        <td class="w-50 text-center">@item.AnoFinal</td>
                        <td class="text-center"><a href="@Url.Action( "editar", "Temporada", new { id = item.IDTemporada } )" class="text-secondary"><i class="fa fa-pencil-square-o fa-lg" aria-hidden="true"></i></a></td>
                        <td class="text-center"><a href="@Url.Action( "excluir", "Temporada", new { id = item.IDTemporada } )" onclick="return confirm('Deseja excluir a Temporada?');" class="text-danger"><i class="fa fa-trash fa-lg" aria-hidden="true"></i></a></td>
                    </tr>

                }

            </tbody>
        </table>
    </div>
</div>

@using ( Html.BeginForm() )
{
    @Html.HiddenFor( m => m.temporada.IDTemporada )

    <div class="row mt-5">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-primary text-light">
                    <div class="card-title">
                        <h4>Cadastro</h4>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-2">
                            <div class="form-group">
                                @Html.LabelFor( m => m.temporada.AnoInicial )
                                @Html.TextBoxFor( m => m.temporada.AnoInicial, new { @class = "form-control text-right", autocomplete = "off", @type = "text" } )
                                @Html.ValidationMessageFor( m => m.temporada.AnoInicial )
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                                @Html.LabelFor( m => m.temporada.AnoFinal )
                                @Html.TextBoxFor( m => m.temporada.AnoFinal, new { @class = "form-control text-right", autocomplete = "off", @type = "text" } )
                                @Html.ValidationMessageFor( m => m.temporada.AnoFinal )
                            </div>
                        </div>
                        <div class="col-md-2 alinhamento-vertical">
                            <button type="submit" class="btn btn-warning">Salvar</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

    }
@section Temporada
{
    <script type="text/javascript">
        $(document).ready( () => {
            exibirMensagem(@Model.TipoMSG, "@Model.TextoMSG");
        });
    </script>
}
