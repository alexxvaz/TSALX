@model TSALX.Models.Campeonato

@{
    ViewBag.Title = "Editar Campeonato";
}

<h1>Editar Campeonato</h1>

<div class="row">
    <div class="col-lg-12 text-right">
        <a href="@Url.Action("Index", "Campeonato" )" class="text-secondary">
            <i class="fa fa-table" aria-hidden="true"></i> Listar Campeonato
        </a>
    </div>
</div>

@using( Html.BeginForm() )
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor( m => m.IDCampeonato )


    <div class="row mt-2">
        <div class="col-lg-12">
            <div class="form-group">
                @Html.LabelFor( m => m.Nome )
                @Html.TextBoxFor( m => m.Nome, new { @class = "form-control", autocomplete = "on" } )
                @Html.ValidationMessageFor( m => m.Nome )
            </div>
        </div>
    </div>

    <div class="row mt-1">
        <div class="col-lg-12">
            <div class="form-group">
                @Html.LabelFor( m => m.IDRegiao )
                @Html.DropDownListFor( m => m.IDRegiao, new SelectList( Model.ListaRegiao, "IDRegiao", "Nome" ), "(selecione)", new { @class = "form-control" } )
                @Html.ValidationMessageFor( m => m.IDRegiao )
            </div>
        </div>

    </div>

    <div class="row mt-1">
        <div class="col-lg-12">
            <div class="custom-switch custom-control-inline">
                @Html.CheckBoxFor( m => m.Ativo, new { @class = "custom-control-input" } )
                @Html.LabelFor( m => m.Ativo, new { @class = "custom-control-label" } )
            </div>
        </div>
    </div>

    <div class="row">

        <div class="col-lg-12 text-right">
            <button type="submit" class="btn btn-warning">Salvar</button>
        </div>
    </div>
}

<h3>Times</h3>
<div class="row">
    <div class="col-lg-4">

        <table class="table table-light table-bordered">

            <tbody>
                @foreach( var itm in Model.Coluna1Equipe )
                {
                    <tr>
                        <td class="w-100">@itm.Nome</td>
                        <td><img src="@itm.Bandeira" alt="tsalx - Campeonato" title="@itm.NomeRegiao" /></td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
    <div class="col-lg-4">
        <table class="table table-light table-bordered">

            <tbody>
                @foreach( var itm in Model.Coluna2Equipe )
                {
                    <tr>
                        <td class="w-100">@itm.Nome</td>
                        <td><img src="@itm.Bandeira" alt="tsalx - Campeonato" title="@itm.NomeRegiao" /></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="col-lg-4">
        <table class="table table-light table-bordered">

            <tbody>
                @foreach( var itm in Model.Coluna3Equipe )
                {
                    <tr>
                        <td class="w-100">@itm.Nome</td>
                        <td><img src="@itm.Bandeira" alt="tsalx - Campeonato" title="@itm.NomeRegiao" /></td>
                    </tr>
                }
            </tbody>
        </table>

    </div>

</div>

@if( ViewBag.ErroMensagem != null )
{
    <div class="row mt-3">
        <div class="col-lg-12">
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Fechar">
                    <span aria-hidden="true">&times;</span>
                </button>
                @ViewBag.ErroMensagem
            </div>
        </div>
    </div>
}
